void setup()
{
  Serial.begin(9600);
  Wire.begin();
  oled.init();                      // Initialze SSD1306 OLED display
  oled.clearDisplay();  
  oled.setTextXY(0,3);              // Set cursor position, start of line 0
  oled.setFont(font5x7);            //se puede cambiar
  oled.putString("Bienvenidos");// Clear screen
  oled.setTextXY(3,3);
  oled.setFont(font8x8);
  oled.putString(" ACROBOTIC");  
  delay(2000);
  oled.drawBitmapd(ACROBOT,128,64);
  delay(2000);
  oled.clearDisplay();
  for (unsigned char j=0;j<=7;j++)
  {
    oled.setTextXY(j,0);
    for (unsigned char i=0;i<=127;i++)
    {
     aux=pgm_read_byte_near(ACROBOT+i+127*j+j);
     oled.sendData(aux);
    }
  }
  delay(2000);
  oled.clearDisplay();
  oled.setTextXY(4,0);
  oled.putString("U training IoT");
}
